---
const { translateLabels } = Astro.props;
---

<section class="achivments__section">
  <article class="container padding-section center-alignment">
    <h2 class="section-title text-lg-center">{translateLabels('achivements.title')}</h2>
    <div class="achivments__container ">
      <aside class="center-alignment">
        <img src="./img-medalla.png" alt="medalla color dorado con centro negro">
        <p class="text-lg-center" set:html={translateLabels('achivements.regional')}></p>
      </aside>
      <aside class="center-alignment">
        <img src="./img-medalla02.png" alt="medalla color dorado con centro negro">
        <p class="text-lg-center" set:html={translateLabels('achivements.national')}></span></p>
      </aside>
      
    </div>
  </article>
</section>

<style>
  .achivments__container{
    display: flex;
    justify-content: center;
    align-items: center;
    flex-wrap: wrap;
    margin-top: 3rem;
    gap: 3rem;
  }

  .achivments__container aside {
    width: min(100%, 30rem);
  }

  .achivments__container aside img{
    width: 15rem;
    margin-bottom: 1rem;
    animation: float 6s ease-out infinite;
  }

  .achivments__container aside p{
    font-weight: bold;
  }

  .achivments__container aside p span{
    color: var(--action-color);
  }

  @media (width >= 1100px){
    .achivments__container{
      justify-content: space-between;
    }

    .achivments__container aside img{
      width: 23rem;
    }
  }

  @keyframes float{
  0%{
    transform: translateY(0px);
  }
  50%{
    transform: translateY(-30px);
  }
  100%{
    transform: translateY(0px);
  }
  
}

</style>