---
import certificaciones from '../../education.json'
---

<section class=" education__section">
  <article class="center-alignment padding-section container">
    <h2 class="section-title text-lg-center">Certicaciones que he obtenido en los últimos años.</h2>
    <div class="timeline__container">
      {
        certificaciones.map((certificacion) => (
          <div class="timeline__item">
          {certificacion.img ? <img src={certificacion.img} alt={certificacion.title}> : <div class="img"></div> }
            <div class="timeline__item-content">
              <span class="timeline__year">{certificacion.year}</span>
              <p>{certificacion.institution}</p>
              <h4>{certificacion.title}</h4>
            </div>
          </div>
        ))
      }
    </div>
  </article>
</section>

<style>
  .education__section{
    background-color: var(--primary-color);
    color: var(--text-color);
  }

  .timeline__container{
    display: flex;
    flex-wrap: wrap; 
    justify-content: center;
    align-items: center;
    margin-top: 2rem;
    width: min(100%, 1000px);
    gap: 1.5rem;
  }

  .timeline__item{
    display: flex;
    flex-direction: column;
    align-items: center;
    width: min(100%, 180px);
    height: 400px;
    gap: .8rem;
    border: dashed 2px var(--text-color);
    border-radius: 100px;
    padding: 1rem;
    text-align: center;
  }

  .timeline__item img, .timeline__item .img{
    width: 8rem;
    height: 8rem;
    border-radius: 100px;
    object-fit: cover;
  }

  .timeline__item .img{
    position: relative;
    background-color: var(--text-color);
  }

  .timeline__item .img::after{
    position: absolute;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
    display: flex;
    justify-content: center;
    align-items: center;
    content: 'Cargando...';
    color: var(--primary-color);
    backdrop-filter: blur(10px);
    border-radius: 50%;
  }


  .timeline__item-content h4{
    margin-top: 1rem;
  }

  .timeline__item-content span{
    font-weight: bold;
    margin-bottom: 1rem;
  }

</style>