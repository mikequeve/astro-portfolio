---
import proyectos from '../../projects.json'
---

<section class="projects__section" id="projects">
  <article class="center-alignment container padding-section">
    <h2 class="section-title text-lg-center">
      Proyectos en los que he trabajado.
    </h2>
    <div class="container projects__container">
      {
        proyectos.map((proyecto) =>(
          <figure class="center-alignment project__card">
            <img src={proyecto.img} alt={proyecto.titulo}>
            <figcaption class="project__card-content">
              <h4 class="project__card-title">{proyecto.titulo}</h4>
              <p class="project__card-description">{proyecto.descripcion}</p>
              <aside class="project__card-tech">
              </aside>
              <div class="project__card-buttons">
                {
                  proyecto.codigo &&(
                    <a href={proyecto.codigo} target="_blank" rel="noopener noreferrer" class="btn-terciary">Ver CÃ³digo</a>
                  )
                }
                <a href={proyecto.enlace} target="_blank" rel="noopener noreferrer" class="btn-terciary">Ver Proyecto</a>
              </div>
            </figcaption>
          </figure>
        ))
      }
    </div>
  </article>
</section>

<style>
  .projects__section{
    scroll-margin-top: 100px;
  }

  .projects__section .container{
    gap: 2rem;
  }

  .projects__container{
    display: grid;
    grid-template-columns: repeat(auto-fit, minmax(22rem, 1fr));
    width: 100%;
    place-content: center;
  }

  .project__card{
    border-radius: 10px;
  }

  .project__card img{
    width: 100%;
    height: 14rem;
    object-fit: cover;
    border-top-left-radius: 10px;
    border-top-right-radius: 10px;
  }

  .project__card .project__card-content{
    width: 100%;
    padding: 1rem;
    background-color: var(--primary-color);
    color: var(--text-color);
    border-bottom-left-radius: 10px;
    border-bottom-right-radius: 10px;
  }

  .project__card-content p{
    font-size: .9rem;
    margin-top: .8rem;
  }

  .project__card-tech{
    width: 100%;
    margin-top: 1rem;
  }

  .project__card-tech span{
    font-size: .8rem;
    padding: .3rem 1rem;
    background-color: var(--action-color);
  }

  .project__card-buttons{
    display: flex;
    justify-content: center;
    align-items: center;
    margin-top: 1.5rem;
  }

  .project__card-buttons a{
    margin-inline: 1rem;
    font-size: .8rem;
  }

  @media (width >= 1100px){
    .project__card-buttons a:hover{
      background-color: var(--action-color);
      border: solid 1px var(--action-color);
      color: var(--text-color);
    }
  }
  

</style>